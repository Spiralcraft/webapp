<httpd:MultiAliasHttpServiceContext
  xmlns:httpd="class:/spiralcraft/pioneer/httpd/"
  xmlns:autofilter="class:/spiralcraft/servlet/autofilter/"
  >
                  
  <maxSessionInactiveInterval>7200
  </maxSessionInactiveInterval>
      
  <debug>false
  </debug>
  
  <initParameters>
    <httpd:InitParameter>
      <name>spiralcraft.instance.themeURI
      </name>
      <value>bundle://spiralcraft-webapp.war-webui/themes/standard/
      </value>
    </httpd:InitParameter>
    <httpd:InitParameter>
      <name>spiralcraft.instance.publicURI
      </name>
      <value>http://localhost:8080
      </value>
    </httpd:InitParameter>
    <httpd:InitParameter>
      <name>spiralcraft.sysadmin.email
      </name>
      <value>root@localhost.localdomain
      </value>
    </httpd:InitParameter>
  </initParameters>
  
  <securityConstraints>
    <httpd:SecurityConstraint>
      <resourceCollection>
        <httpd:WebResourceCollection>
        
          <URLPatterns>/login
          </URLPatterns>
          
          <URLPatterns>/register
          </URLPatterns>

          <URLPatterns>/myAccount
          </URLPatterns>
                    
        </httpd:WebResourceCollection>
      </resourceCollection>
     
      <requireSecureChannel>true
      </requireSecureChannel>
    </httpd:SecurityConstraint> 
  </securityConstraints>
 
  <filterMappings>
    <httpd:FilterMapping>
      <filterName>controller
      </filterName>
    
      <URLPattern>*
      </URLPattern>
    </httpd:FilterMapping>
  </filterMappings>
  
  <filters>
    <httpd:FilterHolder>
      <filterName>controller
      </filterName>
      
      <filterClass>spiralcraft.servlet.autofilter.Controller
      </filterClass>
 
      <initParameters>
        <httpd:InitParameter>
          <name>debug
          </name>
          
          <value>false
          </value>
        </httpd:InitParameter>
      </initParameters>
      
    </httpd:FilterHolder>
  </filters>
  
  <servletMappings>

    <httpd:ServletMapping>
       
      <servletName>webui
      </servletName>
        
      <URLPatterns>/
      </URLPatterns>
        
    </httpd:ServletMapping>

    <httpd:ServletMapping>
       
      <servletName>webui
      </servletName>
        
      <URLPatterns>*.webui
      </URLPatterns>
        
    </httpd:ServletMapping>

  </servletMappings>
                    
  <servletHolders>
                        
    <httpd:ServletHolder>
            
      <servletName>webui
      </servletName>
            
      <servletClass>spiralcraft.servlet.BeanServlet
      </servletClass>
      
      <initParameters>
        <httpd:InitParameter>
          <name>typeURI
          </name>
          
          <value>context://config/UIServlet
          </value>
        </httpd:InitParameter>
      </initParameters>
            
    </httpd:ServletHolder>
    
  </servletHolders>
</httpd:MultiAliasHttpServiceContext>
