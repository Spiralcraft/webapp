<app:PlaceContext
  xmlns:app="class:/spiralcraft/app/"
  xmlns:vfsc="class:/spiralcraft/vfs/context/"
  xmlns:swa-code="context://code/"
  xmlns:swa-conf="context://code/config/"
  xmlns:config="context://config/"
  xmlns:smtp="class:/spiralcraft/net/smtp/"
  >

  <id>spiralcraft-webapp
  </id>
  
  <version>0.4.17-dev4
  </version>
  
  <plugins>
    <swa-code:Plugin/>
  </plugins>
  
  <imports>
    [*config:SMTPGateway]
  </imports>
  
  <authenticator>
    <swa-conf:Authenticator/>
  </authenticator>
  
  <exportMounts>
    <vfsc:Authority>
      <authorityName>
      </authorityName>
     
      <debugLevel>INFO
      </debugLevel>
      
      <grafts>
        <vfsc:Redirect>
          <virtualURI>uploads/
          </virtualURI>
          <newBaseURI>context://files/uploads/
          </newBaseURI>
        </vfsc:Redirect>
      </grafts>
    </vfsc:Authority>  
  </exportMounts>
    
  <exports>
    [*smtp:QueueConnector]
  </exports>
  
  <logLevel>INFO
  </logLevel>
</app:PlaceContext>