<app:PlaceContext
  xmlns:app="class:/spiralcraft/app/"
  xmlns:vfsc="class:/spiralcraft/vfs/context/"
  xmlns:swa-code="context://code/"
  xmlns:swa-conf="context://code/config/"
  xmlns:config="context://config/"
  xmlns:smtp="class:/spiralcraft/net/smtp/"
  xmlns:task="class:/spiralcraft/task/"
  xmlns:regt="context://code/function/registration/tasks/"
  xmlns:wa="class:/spiralcraft/webapp/analytics/"
  >

  <id>spiralcraft-webapp
  </id>
  
  <version>0.4.17-dev18
  </version>
  
  <postInitialize>
    [*regt:InitAdminUser].()
  </postInitialize>
    
  <plugins>
    <swa-code:Plugin/>
  </plugins>
  
  <imports>
    [*config:SMTPGateway]
  </imports>
  
  <authenticator>
    <swa-conf:Authenticator/>
  </authenticator>
  
  <schedulers>
    <task:TaskScheduler>
      <period>5000
      </period>
      <scenario>
        <swa-conf:SMTPForward/>
      </scenario>
    </task:TaskScheduler>
  </schedulers>  
  
  <exportMounts>
    <vfsc:Authority>
      <authorityName>
      </authorityName>
     
      <debugLevel>INFO
      </debugLevel>
      
      <grafts>
        <vfsc:Redirect>
          <virtualURI>uploads/
          </virtualURI>
          <newBaseURI>context://files/uploads/
          </newBaseURI>
        </vfsc:Redirect>
      </grafts>
    </vfsc:Authority>  
  </exportMounts>
    
  <services>
    <wa:LogService/>
  </services>
  <exports>
    [*smtp:QueueConnector]
  </exports>
  
  <logLevel>INFO
  </logLevel>
</app:PlaceContext>